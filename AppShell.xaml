<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="StudentProgressTracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:StudentProgressTracker.Views"
    Title="StudentProgressTracker"
    BackgroundColor="{StaticResource Primary}">

    <!-- Auth Pages (not in TabBar) -->
    <ShellContent
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />
    <ShellContent
        ContentTemplate="{DataTemplate views:RegisterPage}"
        Route="RegisterPage" />

    <!-- Main App (Protected) -->
    <TabBar>
        <ShellContent
            Title="Terms"
            ContentTemplate="{DataTemplate views:TermsPage}"
            Route="TermsPage" />
        <ShellContent
            Title="GPA"
            ContentTemplate="{DataTemplate views:GPAPage}"
            Route="GPAPage" />
    </TabBar>

</Shell>



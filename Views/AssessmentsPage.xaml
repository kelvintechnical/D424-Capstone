<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentProgressTracker.Views.AssessmentsPage"
             xmlns:viewmodels="clr-namespace:StudentProgressTracker.ViewModels"
             x:DataType="viewmodels:AssessmentViewModel"
             Title="Assessments">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Login" Order="Secondary" Clicked="LoginToolbarItem_Clicked" />
    </ContentPage.ToolbarItems>
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsEnabled="True" IsVisible="True" />
    </Shell.BackButtonBehavior>
    <Grid RowDefinitions="*,Auto">
        <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16">
            <Label Text="Assessments" Style="{StaticResource Headline}" />

            <VerticalStackLayout>
                <Label Text="Objective Assessment" FontAttributes="Bold" />
                <Entry Placeholder="Name" Text="{Binding ObjectiveAssessment.Name}" />
                <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                    <VerticalStackLayout>
                        <Label Text="Start" />
                        <DatePicker Date="{Binding ObjectiveStartDate}" />
                        <TimePicker Time="{Binding ObjectiveStartTime}" />
                    </VerticalStackLayout>
                    <VerticalStackLayout Grid.Column="1">
                        <Label Text="Due" />
                        <DatePicker Date="{Binding ObjectiveDueDate}" />
                        <TimePicker Time="{Binding ObjectiveDueTime}" />
                    </VerticalStackLayout>
                </Grid>
                <HorizontalStackLayout Spacing="12">
                    <Switch IsToggled="{Binding ObjectiveAssessment.NotificationsEnabled}" />
                    <Label Text="Enable Notifications" VerticalOptions="Center" />
                </HorizontalStackLayout>
                <HorizontalStackLayout Spacing="12">
                    <Button Text="Add" Command="{Binding AddObjectiveCommand}" />
                    <Button Text="Save" Command="{Binding SaveObjectiveCommand}" />
                    <Button Text="Delete" Command="{Binding DeleteObjectiveCommand}" />
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <VerticalStackLayout>
                <Label Text="Performance Assessment" FontAttributes="Bold" />
                <Entry Placeholder="Name" Text="{Binding PerformanceAssessment.Name}" />
                <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                    <VerticalStackLayout>
                        <Label Text="Start" />
                        <DatePicker Date="{Binding PerformanceStartDate}" />
                        <TimePicker Time="{Binding PerformanceStartTime}" />
                    </VerticalStackLayout>
                    <VerticalStackLayout Grid.Column="1">
                        <Label Text="Due" />
                        <DatePicker Date="{Binding PerformanceDueDate}" />
                        <TimePicker Time="{Binding PerformanceDueTime}" />
                    </VerticalStackLayout>
                </Grid>
                <HorizontalStackLayout Spacing="12">
                    <Switch IsToggled="{Binding PerformanceAssessment.NotificationsEnabled}" />
                    <Label Text="Enable Notifications" VerticalOptions="Center" />
                </HorizontalStackLayout>
                <HorizontalStackLayout Spacing="12">
                    <Button Text="Add" Command="{Binding AddPerformanceCommand}" />
                    <Button Text="Save" Command="{Binding SavePerformanceCommand}" />
                    <Button Text="Delete" Command="{Binding DeletePerformanceCommand}" />
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <ActivityIndicator IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}" />
        </VerticalStackLayout>
    </ScrollView>
    
    <!-- Back Button at Bottom -->
    <Button Grid.Row="1"
            Text="â† Back" 
            Command="{Binding GoBackCommand}"
            BackgroundColor="{StaticResource Secondary}"
            TextColor="{StaticResource Charcoal}"
            FontSize="18"
            FontAttributes="Bold"
            CornerRadius="0"
            HeightRequest="60"
            HorizontalOptions="Fill"
            Margin="0" />
    </Grid>
</ContentPage>







<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentProgressTracker.Views.TermDetailPage"
             xmlns:viewmodels="clr-namespace:StudentProgressTracker.ViewModels"
             x:DataType="viewmodels:TermDetailViewModel"
             Title="Term Details">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Login" Order="Secondary" Clicked="LoginToolbarItem_Clicked" />
    </ContentPage.ToolbarItems>
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsEnabled="True" IsVisible="True" />
    </Shell.BackButtonBehavior>
    <Grid RowDefinitions="*,Auto">     
        <ScrollView>
            <VerticalStackLayout Padding="16" Spacing="16">
                <Label Text="Academic Term Details" Style="{StaticResource Headline}" />

                <VerticalStackLayout>
                    <Label Text="Term Title" />
                    <Entry Text="{Binding Title}" Placeholder="e.g., Spring 2025, Term 1" />

                    <Label Text="Dates" Margin="0,12,0,0" />
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                        <VerticalStackLayout>
                            <Label Text="Start Date" />
                            <DatePicker Date="{Binding StartDate}" />
                            <Label 
                                Text="{Binding StartDateError}" 
                                TextColor="Red" 
                                FontSize="12"
                                IsVisible="{Binding StartDateError, Converter={StaticResource IsStringNotEmptyConverter}}"
                                Margin="0,4,0,0" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="End Date" />
                            <DatePicker Date="{Binding EndDate}" />
                            <Label 
                                Text="{Binding EndDateError}" 
                                TextColor="Red" 
                                FontSize="12"
                                IsVisible="{Binding EndDateError, Converter={StaticResource IsStringNotEmptyConverter}}"
                                Margin="0,4,0,0" />
                        </VerticalStackLayout>
                    </Grid>
                </VerticalStackLayout>

                <Grid ColumnDefinitions="*,Auto" VerticalOptions="End" Margin="0,16,0,0">
                    <ActivityIndicator IsVisible="{Binding IsSaving}" IsRunning="{Binding IsSaving}" />
                    <HorizontalStackLayout Grid.Column="1" Spacing="12">
                        <Button Text="Delete" Command="{Binding DeleteCommand}" BackgroundColor="{StaticResource Gray400}" TextColor="{StaticResource White}" />
                        <Button Text="Save Term" Command="{Binding SaveCommand}" />
                    </HorizontalStackLayout>
                </Grid>
            </VerticalStackLayout>
        </ScrollView>
        
        <!-- Back Button at Bottom -->
        <Button Grid.Row="1"
                Text="â† Back" 
                Command="{Binding GoBackCommand}"
                BackgroundColor="{StaticResource Secondary}"
                TextColor="{StaticResource Charcoal}"
                FontSize="14"
                FontAttributes="Bold"
                CornerRadius="8"
                HeightRequest="40"
                WidthRequest="120"
                HorizontalOptions="Center"
                Margin="0,8" />
    </Grid>
</ContentPage>

